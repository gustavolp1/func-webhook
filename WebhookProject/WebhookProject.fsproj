<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <!-- This property ensures that the project is built as an executable application -->
    <OutputType>Exe</OutputType>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="WebhookHandler.fs" />
    <Compile Include="Program.fs" />
  </ItemGroup>

  <ItemGroup>
    <!-- Giraffe is the web framework -->
    <PackageReference Include="Giraffe" Version="7.0.2" />
    <!-- The Microsoft.NET.Sdk.Web SDK handles most of the ASP.NET Core dependencies for net9.0 -->
  </ItemGroup>

</Project>